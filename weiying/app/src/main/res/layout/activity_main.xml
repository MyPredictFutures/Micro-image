<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="guokangjie.news.com.weiying.activity.MainActivity">


    <guokangjie.news.com.weiying.myview.MyMainDragView
        android:id="@+id/my_drawer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/red_background">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/top_menu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/avatar"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_marginLeft="25dp"
                            android:layout_marginTop="55dp"
                            android:scaleType="fitXY"
                            android:src="@mipmap/photo" />

                        <TextView
                            android:id="@+id/desc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="25dp"
                            android:layout_marginRight="80dp"
                            android:layout_marginTop="5dp"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:padding="10dp"
                            android:text="微影，微一下"
                            android:textColor="@android:color/white"
                            android:textSize="20dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_collect"
                                style="@style/MenuStyle"
                                android:text="@string/collection" />

                            <TextView
                                android:id="@+id/tv_mydown"
                                style="@style/MenuStyle"
                                android:text="@string/download" />

                            <TextView
                                android:id="@+id/tv_fuli"
                                style="@style/MenuStyle"
                                android:text="@string/fuli" />

                            <TextView
                                android:id="@+id/tv_share"
                                style="@style/MenuStyle"
                                android:text="@string/share" />

                            <TextView
                                android:id="@+id/tv_feedback"
                                style="@style/MenuStyle"
                                android:text="@string/feedback" />

                            <TextView
                                android:id="@+id/tv_setting"
                                style="@style/MenuStyle"
                                android:text="@string/setting" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_marginBottom="50dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/about"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="25dp"
                        android:padding="12dp"
                        android:text="关于"
                        android:textColor="@android:color/white"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/theme"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:padding="12dp"
                        android:text="主题"
                        android:textColor="@android:color/white"
                        android:textSize="20dp" />

                </LinearLayout>

            </LinearLayout>
        </RelativeLayout>

        <guokangjie.news.com.weiying.myview.MyFrameLayout
            android:id="@+id/main_content_frame_parent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@mipmap/bg_colorful">

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                app:rigthtPadding="160dp">

                <FrameLayout
                    android:id="@+id/fl_main"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"></FrameLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/bottom_bg"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/ll_main_jx"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/found_select" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="精选" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_main_zt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/special" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="专题" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_main_fx"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/fancy" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="发现" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_main_my"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/my" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="我的" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </guokangjie.news.com.weiying.myview.MyFrameLayout>
    </guokangjie.news.com.weiying.myview.MyMainDragView>


</RelativeLayout>
